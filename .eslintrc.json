{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "plugin:prettier/recommended",
        "prettier"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "import/prefer-default-export": "off",
        "import/extensions": "off",
        "generator-star-spacing": "off",
        "prettier/prettier": [
            "error",
            {
                "tabWidth": 2,
                "printWidth": 80,
                "useTabs": false,
                "semi": true,
                "singleQuote": true,
                "trailingComma": "all",
                "arrowParens": "avoid",
                "endOfLine": "lf"
            }
        ]
    }
}